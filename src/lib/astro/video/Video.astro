---
import { twMerge } from '../../tailwind/tailwind-merge.js';
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'video'>, 'class'> {
  class?: ClassValue;
  sources?: HTMLAttributes<'source'>[];
  traks?: HTMLAttributes<'track'>[];
}

const { class: className, sources = [], traks = [], ...props } = Astro.props;
---

<video
  is='app-video'
  class={twMerge(className)}
  {...props}>
  {sources.map((attrs) => <source {...attrs} />)}
  {traks.map((attrs) => <trak {...attrs} />)}
  <slot> Your browser does not support the video tag. </slot>
</video>
