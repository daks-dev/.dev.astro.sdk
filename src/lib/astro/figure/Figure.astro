---
import { twMerge } from '../../tailwind/tailwind-merge.js';
import Img from '../img/Img.astro';
import type { FigureAttriibutes as Props } from './index.d.ts';

const {
  src,
  img,
  caption: __caption = {},
  class: className,
  custom = {},
  alt,
  eager,
  lazyload,
  ...props
} = Astro.props;

const attributes = {
  ...img,
  src,
  alt,
  eager,
  lazyload
};

const caption = Object.entries(__caption);
---

<figure
  class={twMerge('relative flex flex-col', className)}
  {...props}>
  <slot name='before' />
  <Img
    class={custom.img}
    {...attributes}
  />
  <slot>
    {
      caption.length > 0 && (
        <figcaption class={twMerge('flex flex-col', custom.caption)}>
          {caption.map(([key, val]) =>
            key === 'title' ? (
              <span
                class={twMerge('order-first font-medium', custom[key])}
                set:html={val}
              />
            ) : key === 'description' ? (
              <small
                class={twMerge('order-last', custom[key])}
                set:html={val}
              />
            ) : (
              <span
                class={twMerge(custom[key])}
                set:html={val}
              />
            )
          )}
        </figcaption>
      )
    }
  </slot>
  <slot name='after' />
</figure>
